<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
    </style>

    <style name="app_title_style" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="head1_style" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="head2_style" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="edittext_style" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/colorInputText</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="main_menu_style" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="screen_title_style" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="label_style" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
