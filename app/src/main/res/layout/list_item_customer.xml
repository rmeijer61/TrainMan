<?xml version="1.0" encoding="utf-8"?>
<!-- Figure 8.9 - Updating the list item layout file -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@android:color/white">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:textColor="@color/gray800" />
    <TextView
        android:id="@+id/customer_list_name"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/list_item_customer_name_label"/>
    <TextView
        android:id="@+id/customer_list_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/list_item_customer_date_label"/>

</LinearLayout>