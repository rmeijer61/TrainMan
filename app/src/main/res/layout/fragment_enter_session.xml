<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView_enter_new_session"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:textAllCaps="false">

        <TextView
            style="@style/screen_title_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/enter_new_session_title" />

        <TextView
            android:id="@+id/enter_session_date_label"
            style="@style/label_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/session_date_label"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/enter_session_date_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/date_button"
            android:textAlignment="textStart"
            android:paddingStart="3dp"
            android:paddingEnd="1dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="@string/session_date_button_text" />


        <TextView
            android:id="@+id/enter_session_desc_label"
            style="@style/label_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/session_desc_label"
            android:textAllCaps="false" />

        <EditText
            android:id="@+id/enter_session_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/session_desc_hint"
            android:minLines="1"
            android:lines="2"
            android:maxLines="5"
            android:background="@drawable/edittext_shape" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/enter_session_completed_label"
                style="@style/label_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="@string/session_completed_label"
                android:textAllCaps="false" />

            <CheckBox
                android:id="@+id/enter_session_completed_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/enter_session_paid_label"
                style="@style/label_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="@string/session_paid_label"
                android:textAllCaps="false" />

            <CheckBox
                android:id="@+id/enter_session_paid_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/enter_session_cancel_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/button_round"
                android:text="@string/cancel_button_text"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/enter_session_save_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/button_round"
                android:text="@string/save_button_text"
                android:textColor="@android:color/black" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>