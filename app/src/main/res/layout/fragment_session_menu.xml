<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView_enter_new_customer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/menu_bg"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView style="@style/head2_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/session_menu_title"/>
        </LinearLayout>

        <View
            style="?android:listSeparatorTextViewStyle"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:layout_width="312dp"
            android:layout_height="1dp"
            android:background="@color/blue700" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/session_menu_view_session_button"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/button_round"
                android:text="@string/view_session_button_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/session_menu_sign_session_button"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/button_round"
                android:text="@string/sign_session_button_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/session_menu_enter_payment_button"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/button_round"
                android:text="@string/enter_payment_button_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/session_menu_view_payment_button"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/button_round"
                android:text="@string/view_payment_button_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/session_menu_generate_receipt_button"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/button_round"
                android:text="@string/generate_receipt_button_text" />
        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <Button
                android:id="@+id/session_menu_done_button"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/button_round"
                android:text="@string/done_button_text"/>
        </LinearLayout>

        <View
            style="?android:listSeparatorTextViewStyle"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_width="312dp"
            android:layout_height="1dp"
            android:background="@color/blue700" />

    </LinearLayout>

</ScrollView>