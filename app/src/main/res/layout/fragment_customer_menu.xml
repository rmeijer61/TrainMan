<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView_enter_new_customer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_bg"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView style="@style/head2_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/customer_menu_title"/>
        </LinearLayout>

        <View
            style="?android:listSeparatorTextViewStyle"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:layout_width="312dp"
            android:layout_height="1dp"
            android:background="@color/blue700" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <Button
                android:id="@+id/view_customer_button"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/button_round"
                android:text="@string/view_customer_button_text"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <Button
                android:id="@+id/take_customer_picture_button"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/button_round"
                android:text="@string/take_customer_picture_button_text"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <Button
                android:id="@+id/customer_menu_view_sessions_button"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/button_round"
                android:text="@string/view_customer_sessions_button_text"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <Button
                android:id="@+id/enter_new_session_button"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/button_round"
                android:text="@string/enter_new_session_button_text"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <Button
                android:id="@+id/customer_menu_view_payments_button"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/button_round"
                android:text="@string/view_customer_payments_button_text"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <Button
                android:id="@+id/customer_menu_delete_sessions_button"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/button_round"
                android:text="@string/delete_customer_sessions_button_text"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <Button
                android:id="@+id/customer_menu_done_button"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/button_round"
                android:text="@string/done_button_text"/>
        </LinearLayout>

        <View
            style="?android:listSeparatorTextViewStyle"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_width="312dp"
            android:layout_height="1dp"
            android:background="@color/blue700" />

    </LinearLayout>

</ScrollView>